<h1 class="font-bold text-4xl text-black mx-auto w-full flex justify-center">Artists</h1>

<div class="flex justify-center items-center">
  <% @artists.each do |artist| %>
    <div class="artist">
      <%= link_to artists_path(artist_id: artist.id) do %>
        <div class="flex flex-col justify-center items-center mx-2">
          <%= image_tag artist.image_url, class: 'artist-avatar' %>
          <h5 class="font-bold"><%= artist.name %></h5>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="mt-8 p-4">
  <div class="mb-4">
    <h3 class="font-bold text-xl"><%= @artist.name %> Discography</h3>
    <%= link_to "Visit artist's page", artist_path(@artist), class: 'underline' %>
  </div>

  <ul>
    <% @artist.albums.each do |album| %>
      <li class="mb-4">
        <%= image_tag album.image_url, class: 'w-32 h-32 rounded border-2 border-secondary overflow-hidden' %>
        <h5 class="font-bold"><%= album.title %></h5>
      </li>
    <% end %>
  </ul>
</div>
