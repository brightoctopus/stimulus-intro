<h1 class="font-bold text-xl text-black">Artists</h1>

<div class="flex justify-center items-center">
  <% @artists.each do |artist| %>
    <div class="artist">
      <%= link_to artists_path(artist_id: artist.id) do %>
        <div class="flex flex-col justify-center items-center mx-2">
          <%= image_tag artist.image_url, class: 'artist-avatar' %>
          <h5 class="font-bold"><%= artist.name %></h5>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="mt-4">
  <h3 class="font-bold text-lg"><%= @artist.name %> Discography</h3>

  <ul>
    <% @artist.albums.each do |album| %>
      <li><%= album.title %></li>
    <% end %>
  </ul>

  <%= link_to "Visit artist's page", artist_path(@artist) %>
</div>
